            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="italic" />
    </TableRow>
    
    <!-- Request Longitude -->
    <TableRow android:id="@+id/mpRequestInfoLongitudeTitleRow" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent">
       
        <TextView
            android:id="@+id/mpRequestInfoLongitudeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mpRequestInfoLongitudeLabelText"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </TableRow>
    
    <TableRow android:id="@+id/mpRequestInfoLongitudeRow" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent">
       
        <TextView
            android:id="@+id/mpRequestInfoLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="italic" />
    </TableRow>
    
    <!-- Request Latitude -->
    <TableRow android:id="@+id/mpRequestInfoLatitudeTitleRow" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent">
       
        <TextView
            android:id="@+id/mpRequestInfoLatitudeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mpRequestInfoLatitudeLabelText"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </TableRow>
    
    <TableRow android:id="@+id/mpRequestInfoLatitudeRow" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent">
       
        <TextView
            android:id="@+id/mpRequestInfoLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
